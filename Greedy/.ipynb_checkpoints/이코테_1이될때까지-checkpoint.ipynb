   "source": [
    "n, k = map(int,input().split())\n",
    "result = 0\n",
    "\n",
    "while n >= k :\n",
    "    while n%k != 0:\n",
    "        n -= 1\n",
    "        result += 1\n",
    "    n //= k\n",
    "    result += 1\n",
    "    \n",
    "while n > 1:\n",
    "    n -= 1\n",
    "    result += 1\n",
    "print(result)"
   ]
  }
